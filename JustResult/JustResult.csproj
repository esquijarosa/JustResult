<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <RepositoryUrl>https://github.com/esquijarosa/JustResult</RepositoryUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <Company>2PSL</Company>
    <Authors>Esquijarosa</Authors>
    <Title>Just Result</Title>
    <PackageId>2PSL.JustResult</PackageId>
    <Description>Simple implementation of the Result Pattern.</Description>
    <PackageTags>ResultPattern Result FlowControl</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <AssemblyVersion>1.0.1.0</AssemblyVersion>
    <FileVersion>1.0.1.0</FileVersion>
    <Version>1.1.1</Version>
    <PackageReleaseNotes>Minor changes to Result structure declaration to mark all methods a Pure.</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
